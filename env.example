# MONITORING & ERROR TRACKING (OPTIONAL)
# =============================================================================

# Sentry DSN for error tracking (production)
# SENTRY_DSN=https://your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode (NEVER set to True in production)
DEBUG=True

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# PRODUCTION SETTINGS (SET IN PRODUCTION ENVIRONMENT)
# =============================================================================

# SSL/HTTPS settings
# SECURE_SSL_REDIRECT=True
# SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Static files (production)
# STATIC_ROOT=/path/to/static/files
# MEDIA_ROOT=/path/to/media/files

# Database URL (alternative to individual DB settings)
# DATABASE_URL=postgresql://user:password@host:port/database

# Cache configuration (production)
# CACHE_URL=redis://redis:6379/1

# =============================================================================
# HIPAA COMPLIANCE SETTINGS
# =============================================================================

# Audit logging
AUDIT_LOG_ENABLED=True
AUDIT_LOG_RETENTION_DAYS=2555

# File upload limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB in bytes

# Session timeout (seconds)
SESSION_COOKIE_AGE=3600  # 1 hour

# Failed login monitoring
AXES_FAILURE_LIMIT=5
AXES_COOLOFF_TIME=1  # hours

